{% extends 'base.html.twig' %}

{# Nos produits - SuperCatalog 2000 #}
{% block title %}Nos produits - {{ parent() }}{% endblock %}

{% block body %}
<h1>Nos produits</h1>

<a href="{{ url('app_product_create') }}">Ajouter un produit</a>

<hr>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.title }}</td>
            <td><a href="{{ url('app_product_read', {id: product.id}) }}">Voir</a></td>
        </tr>
    {% endfor %}

    </tbody>
</table>
{% endblock %}
